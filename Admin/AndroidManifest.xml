        <activity
            android:name=".show_teachers"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".teacher_registration"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".viewvideo"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".view_records"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".otp_test"
            android:screenOrientation="portrait" />
        <activity
            android:name=".verify_user"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".fee_accept"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".pdfviewer"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".stu_data"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".details"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".view_receipts"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".browse_video"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".tablayout"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".viewpdf"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:hardwareAccelerated="true"
            android:largeHeap="false" />
        <activity
            android:name=".browse_pdf"
            android:configChanges="orientation|screenSize|layoutDirection" />
